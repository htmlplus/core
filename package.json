{
  "name": "htmlplus",
  "version": "0.0.0",
  "scripts": {
    "clean": "lerna run clean",
    "clean:hard": "npm run clean && lerna clean",
    "init": "lerna bootstrap",
    "publish": "lerna publish from-package",
    "publish:next": "lerna publish from-package --dist-tag next",
    "prepublishOnly": "npm run preversion",
    "preversion": "lerna run bootstrap && lerna run clean && lerna run build",
    "release": "lerna version --no-private --preid next",
    "start": "lerna run start --scope @htmlplus/core --stream"
  },
  "devDependencies": {
    "lerna": "^3.20.2"
  }
}